- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      %i.icon-cog
      Settings
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to "Account Settings"
      %li.divider
      %li
        = link_to "Help"
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      %i.icon-user
      = current_user.name
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to My Profile
      %li
        = link_to 'Change Password', edit_user_password_path
      %li.divider
      %li
        = link_to 'Log Out', destroy_user_session_path

  %form.navbar-search.pull-right
    %input.search-query{:placeholder => "Search", :type => "text"}

- else
  %li
    = link_to 'Log in', new_user_session_path
  %li
    = link_to 'Sign up', new_user_registration_path
